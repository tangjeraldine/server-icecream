generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ice_creams {
  id       Int      @id @default(autoincrement())
  name     String?  @db.VarChar(144)
  pints    Int?
  has_nuts Boolean? @default(false)
  plants   plants[]
}

/// The underlying table does not contain a valid unique identifier and can therefore currently not be handled by the Prisma Client.
model ice_creams_ingredients {
  ice_cream_id  Int?
  ingredient_id Int?
  per_pint      Decimal? @db.Decimal

  @@ignore
}

model ingredients {
  id         Int      @id @default(autoincrement())
  ingredient String?  @db.VarChar(64)
  unit       String?  @db.VarChar(64)
  price_per  Decimal? @db.Money
}

model plants {
  id           Int        @id @default(autoincrement())
  city         String?    @db.VarChar(144)
  pints_made   Int?
  passed       Boolean?
  ice_cream_id Int
  flavour      ice_creams @relation(fields: [ice_cream_id], references: [id])
}
